{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "baseBranchPatterns": [
    "/^core\\d\\d-\\d/"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/rockcraft.yaml/"
      ],
      "matchStrings": [
        "version: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "canonical/snapcraft"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ]
}
